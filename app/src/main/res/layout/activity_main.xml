<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="174dp"
        android:layout_height="113dp"
        android:rotation="-12"
        android:rotationX="-46"
        android:rotationY="12"
        android:text="Some Test text"
        android:textSize="35sp"
        android:translationX="100dp"
        android:translationY="10dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9E2626"
        android:backgroundTintMode="add"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter some text" />

    <Button
        android:id="@+id/button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="Some button"
        android:textSize="5sp"
        android:translationX="200dp"
        android:onClick="changeLayout"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@android:drawable/btn_dialog"
        android:buttonTint="#751E1E"
        android:text="Switcher" />

    <CheckBox
        android:id="@+id/checkBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="CheckBox"
        android:textAlignment="center"
        android:textSize="36sp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="Выключено"
        android:textOn="Включено" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:text="Ems is 2"
        android:textSize="50sp" />

</LinearLayout>